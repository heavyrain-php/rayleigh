<?xml version="1.0"?>
<psalm
    errorLevel="5"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="src/*/vendor" />
            <directory name="src/*/Tests" />
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </UnusedClass>
        <PossiblyUnusedMethod>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </PossiblyUnusedMethod>
        <UnusedParam>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </UnusedParam>
        <PossiblyUnusedReturnValue>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </PossiblyUnusedReturnValue>
        <LessSpecificImplementedReturnType>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </LessSpecificImplementedReturnType>
        <InvalidParamDefault>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </InvalidParamDefault>
    </issueHandlers>
</psalm>
